apiVersion: v1
kind: Service
metadata:
  name: helloworld-app
  namespace: devops
spec:
  type: LoadBalancer
  ports:
  - port: 80
    targetPort: 8080
  selector:
    app: helloworld-app
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: helloworld-app
  namespace: devops
spec:
  replicas: 3
  selector:
    matchLabels:
      app: helloworld-app
  template:
    metadata:
      labels:
        app: helloworld-app
    spec:
      containers:
      - name: helloworld-app
        image: 10.126.6.127:8082/devops/helloworld-app:VERSION
        ports:
        - containerPort: 8080